	ActiveDown (Pixmap $[icons]/0.png -- Flat) \
	Inactive (Pixmap $[icons]/0.png -- Flat)

AddButtonStyle 1 \
	ActiveUp (Pixmap $[icons]/estrela1.png -- Flat) \
